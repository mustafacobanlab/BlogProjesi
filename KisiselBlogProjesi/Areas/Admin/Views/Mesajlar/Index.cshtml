@model IEnumerable<KisiselBlogProjesi.Models.Iletisim>

@{
    ViewData["Title"] = "Mesajlar";
}

<div class="projcard-container">
    <div class="projcard">
        <div class="projcard-textbox" style="width:100%;">
            <div class="d-flex justify-content-between align-items-center mb-3">
                <h2 class="projcard-title">Gelen Mesajlar</h2>
                <a asp-area="Admin" asp-controller="Blog" asp-action="Index" class="btn-admin-don">
                    Admin Sayfasına Dön
                </a>
            </div>

            <table class="projcard-table">
                <thead>
                    <tr>
                        <th>Ad Soyad</th>
                        <th>Mesaj</th>
                        <th>İşlem</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.adSoyad</td>
                            <td>@item.mesaj</td>
                            <td>
                                <form asp-action="Delete" asp-route-id="@item.Id" method="post" onsubmit="return confirm('Silmek istediğinize emin misiniz?');">
                                    <button type="submit" class="btn-sil">Sil</button>
                                </form>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

<style>
    .projcard-table {
        width: 100%;
        border-collapse: collapse;
        margin-top: 20px;
        font-size: 16px;
    }

        .projcard-table th, .projcard-table td {
            border: 1px solid #ddd;
            padding: 12px;
            text-align: left;
        }

        .projcard-table th {
            background-color: #f5f5f5;
            font-weight: 600;
        }

        .projcard-table tr:nth-child(even) {
            background-color: #fafafa;
        }

    .btn-sil {
        background-color: #e74c3c;
        border: none;
        color: #fff;
        padding: 6px 14px;
        border-radius: 6px;
        cursor: pointer;
        transition: background 0.3s ease;
    }

        .btn-sil:hover {
            background-color: #c0392b;
        }

    .btn-admin-don {
        background-color: #3498db;
        color: #fff;
        padding: 8px 16px;
        border-radius: 6px;
        text-decoration: none;
        transition: background 0.3s ease;
    }

        .btn-admin-don:hover {
            background-color: #2980b9;
        }
</style>
